<div class="bg-white">
  <h2 class="text-2xl">Show record: {{ @record.title }}</h2>

  <div class="my-8 grid gap-5 lg:grid-cols-2 xl:grid-cols-3 2xl:grid-cols-4 odd:bg-mint">
    <div :for={{ column <- @columns }}>
      <div class="text-gray font-semibold text-sm">
        {{ titelize(column.field) }} 
      </div>
      <ShowPresenter record={{ @record }}
                      field={{ column.field }} 
                      type={{ column.type }} />
    </div>
  </div>
</div>