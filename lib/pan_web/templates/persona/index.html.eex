<p class="pull-right">
  <%= link "Merge Candidates", to: persona_path(@conn, :merge_candidates),
                      class: "btn btn-primary" %>
</p>

<h2>Listing personas</h2>

<table id="datatable" class="table table-striped table-condensed table-bordered">
  <thead>
    <tr>
      <th><%= la_icon("search-solid") %> Id</th>
      <th><%= la_icon("search-solid") %> Pid</th>
      <th><%= la_icon("search-solid") %> Name</th>
      <th><%= la_icon("search-solid") %> Uri</th>
      <th><%= la_icon("search-solid") %> Email</th>
      <th>Description</th>
      <th>Image url</th>
      <th><%= la_icon("search-solid") %> Image title</th>
      <th>Actions</th>
    </tr>
  </thead>
</table>

<script>
  $(function() {
    $('#datatable').DataTable({
      serverSide: true,
      ajax: {url: '<%= persona_path(@conn, :datatable) %>'},
      columns: [
        { data: 'id' },
        { data: 'pid' },
        { data: 'name' },
        { data: 'uri' },
        { data: 'email' },
        { data: 'description' },
        { data: 'image_url' },
        { data: 'image_title' },
        { data: 'actions' }
      ]
    })
  })
</script>

<%= link "New persona", to: persona_path(@conn, :new) %>
