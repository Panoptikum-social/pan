<h2>Podcasts</h2>

<table id="datatable" class="table table-striped table-condensed table-bordered">
  <thead>
    <tr>
      <th><%= fa_icon "search" %> ID</th>
      <th><%= fa_icon "search" %> Title</th>
      <th>Update paused</th>
      <th>Updated at</th>
      <th>Update intervall</th>
      <th>Next update</th>
      <th><%= fa_icon "search" %> Website</th>
      <th>Actions</th>
    </tr>
  </thead>
</table>

<script>
  $(function() {
    $('#datatable').DataTable({
      serverSide: true,
      ajax: {url: '<%= podcast_path(@conn, :datatable) %>'},
      columns: [
        { data: 'id' },
        { data: 'title' },
        { data: 'update_paused' },
        { data: 'updated_at' },
        { data: 'update_intervall' },
        { data: 'next_update' },
        { data: 'website' },
        { data: 'actions' }
      ]
    })
  })
</script>