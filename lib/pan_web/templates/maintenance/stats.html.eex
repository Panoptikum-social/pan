<div class="col-md-3">
  <ul class="list-group">
    <li class="list-group-item" style="border-top: 1px solid #ddd;">
      <%= link "Elasticsearch push missing",
               to: search_path(@conn, :elasticsearch_push_missing),
               class: "btn btn-primary" %>
    </li>

    <li class="list-group-item">
      <%= link "Cache missing images",
               to: image_path(@conn, :cache_missing),
               class: "btn btn-primary" %>
    </li>

    <li class="list-group-item">
      <%= link "Remove duplicate images",
               to: image_path(@conn, :remove_duplicates),
               class: "btn btn-primary" %>
    </li>

    <li class="list-group-item" style="border-top: 1px solid #ddd;">
      <%= link "Update missing podcast counters",
               to: podcast_path(@conn, :update_missing_counters),
               class: "btn btn-primary" %>
    </li>

    <li class="list-group-item" style="border-top: 1px solid #ddd;">
      <%= link "Remove javascript from shownotes",
               to: episode_path(@conn, :remove_javascript_from_shownotes),
               class: "btn btn-primary" %>
    </li>

    <li class="list-group-item" style="border-top: 1px solid #ddd;">
      <%= link "Catch up missing thumbnailed booleans",
               to: maintenance_path(@conn, :catch_up_thumbnailed),
               class: "btn btn-primary" %>
    </li>

    <li class="list-group-item" style="border-top: 1px solid #ddd;">
      <%= link "Trigger exception notification",
               to: maintenance_path(@conn, :exception_notification),
               class: "btn btn-primary" %>
    </li>
  </ul>
</div>
