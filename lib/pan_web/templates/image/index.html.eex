<h2>Listing images</h2>

<table id="datatable" class="table table-striped table-condensed table-bordered">
  <thead>
    <tr>
      <th><%= la_icon("search-solid") %> ID</th>
      <th>Filename</th>
      <th>Content type</th>
      <th>Path</th>
      <th><%= la_icon("search-solid") %> Podcast</th>
      <th><%= la_icon("search-solid") %> Episode</th>
      <th><%= la_icon("search-solid") %> Persona</th>
      <th>Thumbnail</th>
      <th></th>
    </tr>
  </thead>
</table>

<script>
  $(function() {
    $('#datatable').DataTable({
      serverSide: true,
      ajax: {url: '/admin/images/datatable'},
      columns: [
        { data: 'id' },
        { data: 'filename' },
        { data: 'content_type' },
        { data: 'path' },
        { data: 'podcast_id' },
        { data: 'episode_id' },
        { data: 'persona_id' },
        { data: 'thumbnail', sortable: false },
        { data: 'actions', sortable: false}
      ]
    })
  })
</script>

<%= link "New image", to: image_path(@conn, :new) %>
