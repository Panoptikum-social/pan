<main role="main" class="mx-auto mb-8 p-4">
  <p class="empty:hidden p-4 border border-info-dark bg-info-light/50 rounded-xl mb-4" role="alert">
    <%= get_flash(@conn, :info) %>
  </p>
  <p
    class="empty:hidden p-4 border border-danger-dark bg-danger-light/50 rounded-xl mb-4"
    role="alert"
  >
    <%= get_flash(@conn, :error) %>
  </p>

  <%= @inner_content %>
</main>
