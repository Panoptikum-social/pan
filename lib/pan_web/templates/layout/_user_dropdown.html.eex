  <li class="py-1">
    <%= link [la_nav_icon("podcast-lineicons-solid"), " My Podcasts"],
      to: user_frontend_path(@conn, :my_podcasts),
      class: "text-coolGray-200" %>
  </li>
  <li class="py-1">
    <%= link [la_nav_icon("gift-heroicons-outline"), " My Recommendations"],
      to: recommendation_frontend_path(@conn, :my_recommendations),
      class: "text-coolGray-200" %>
  </li>
  <li class="py-1">
    <%= link [la_nav_icon("rss-heroicons-outline"), " Suggest a Podcast"],
      to: feed_backlog_frontend_path(@conn, :new),
      class: "text-coolGray-200" %>
  </li>
  <li class="py-1">
    <%= link [la_nav_icon("file-audio-lineawesome"), " My OPMLs"],
      to: opml_frontend_path(@conn, :index),
      class: "text-coolGray-200" %>
