<ul>
  <li class="border-t-2 border-coolGray-500 py-1"></li>
  <li class="uppercase text-right py-1"><%= la_nav_icon("user-heroicons-outline") %> <%= @current_user.username %></li>
  <li class="py-1">
    <%= link [la_nav_icon("user-circle-heroicons-outline"), " My Profile"],
      to: user_frontend_path(@conn, :my_profile),
      class: "text-coolGray-200" %>
  </li>
  <li class="py-1">
    <%= link [la_nav_icon("user-secret-line-awesome-outline"), " Change Password"],
      to: user_frontend_path(@conn, :edit_password),
      class: "text-coolGray-200" %>
  </li>
  <li class="py-1">
    <%= link [la_nav_icon("inbox-heroicons-outline"), " My Messages"],
      to: user_frontend_path(@conn, :my_messages),
      class: "text-coolGray-200" %>
