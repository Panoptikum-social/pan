<main role="main" class="bg-gray-lightest mb-8 min-h-screen text-black">
  <div
    class="empty:hidden p-4 border border-info-dark bg-info-light/50 rounded-xl m-4"
    role="alert"
  ><%= get_flash(@conn, :info) %></div>
  <div
    class="empty:hidden p-4 border border-danger-dark bg-danger-light/50 rounded-xl m-4"
    role="alert"
  ><%= get_flash(@conn, :error) %></div>

  <%= @inner_content %>
</main>
